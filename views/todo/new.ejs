<%- include("../layouts/boilerplate.ejs") %>
<body>
  <div
    class="container d-flex pt-5 flex-column justify-content-center align-items-center min-vh-100"
  >
    <div class="row w-100">
      <div class="col-12 col-md-6 offset-md-3">
        <h3 class="text-center">Create task</h3>
        <form action="/todo" class="mb-2" method="post">
          <input
            type="text"
            placeholder="todo"
            class="form-control mb-2"
            name="todo"
          />
          <button type="submit" class="btn btn-dark w-100">Add</button>
        </form>
      </div>
    </div>
  </div>
</body>
