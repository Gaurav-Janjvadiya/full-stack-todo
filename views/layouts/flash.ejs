<% if (success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show text-center mx-auto d-block" role="alert" style="max-width: 600px;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center mx-auto d-block" role="alert" style="max-width: 600px;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>